<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_control_container"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/bottom_bar_bg"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <ImageView
        android:id="@id/player_play_or_pause_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:src="@drawable/player_icon_media_play"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@id/player_curr_progress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="10sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@id/player_total_duration"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@id/player_bottom_control_right_extra"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">
            </LinearLayout>

            <View
                android:id="@id/player_volume_btn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/volume_icon"
                android:clickable="true"
                android:visibility="gone"/>

        </LinearLayout>

        <SeekBar
            android:id="@id/player_progress"
            style="@style/MediaPlayerSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/half_screen_seek_bar_margin_left"
            android:layout_marginRight="@dimen/half_screen_seek_bar_margin_right"
            android:background="@color/transparent"
            android:max="100"
            android:paddingEnd="25dp"
            android:paddingStart="25dp"
            android:splitTrack="false"/>

        <ImageView
            android:id="@id/player_switch_full_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/player_icon_fullscreen_stretch"/>

    </RelativeLayout>

</LinearLayout>