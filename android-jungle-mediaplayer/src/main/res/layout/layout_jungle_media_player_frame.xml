<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/video_view_bkg"
    android:clickable="false">

    <FrameLayout
        android:id="@+id/media_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <com.jungle.mediaplayer.widgets.control.PlayerBottomControl
        android:id="@+id/player_bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="visible"/>

    <com.jungle.mediaplayer.widgets.control.PlayerPreviewControl
        android:id="@+id/player_preview_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.jungle.mediaplayer.widgets.control.PlayerTopControl
        android:id="@+id/player_top_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.jungle.mediaplayer.widgets.panel.LockOrientationPanel
        android:id="@+id/lock_orientation_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="24dp"
        android:visibility="gone"/>

    <com.jungle.mediaplayer.widgets.control.PlayerLoadingControl
        android:id="@+id/player_loading_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>