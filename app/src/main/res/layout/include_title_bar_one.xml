<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_header_height"
                android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/ly_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/btn_press"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_press"
            android:paddingBottom="4dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="4dp"
            android:scaleType="centerInside"
            android:soundEffectsEnabled="false"
            android:src="@drawable/ic_back"/>

        <ImageView
            android:id="@+id/iv_left_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_press"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:scaleType="centerInside"
            android:soundEffectsEnabled="false"
            android:src="@drawable/ic_close_x"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_left_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_press"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:soundEffectsEnabled="false"
            android:text="南京市"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="9"
        android:scaleType="fitXY"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/color_tittle"
        android:textSize="@dimen/header_title_size"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/ly_right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/app_header_height"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_press"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_right_1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_header_height"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/baseThemeColor"
            android:textSize="13sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_right_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_header_height"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_press"
            android:scaleType="centerInside"
            android:src="@drawable/ic_more"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>
