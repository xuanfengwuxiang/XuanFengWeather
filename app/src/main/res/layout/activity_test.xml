<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseThemeColor"
    tools:context="com.xuanfeng.xuanfengweather.module.test.activity.TestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_test_for_edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00ff00"
            android:gravity="center"
            android:text="EditText测试"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_test_for_popupmenu"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="#ff0000"
            android:gravity="center"
            android:text="PopupMenu测试"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tv_test_for_keyboard"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="#00bfff"
            android:gravity="center"
            android:hint="键盘监听"
            android:textColor="@color/white"
            android:textColorHint="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_test_for_pad_send"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="#00bfff"
            android:gravity="center"
            android:text="PAD发送"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_test_for_tv_start"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="#00bfff"
            android:gravity="center"
            android:text="TV启动"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_test_for_tv_send"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="#00bfff"
            android:gravity="center"
            android:text="TV发送"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_test_for_gallery"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00ff00"
            android:gravity="center"
            android:text="图片展示测试"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_aidl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffff00"
            android:gravity="center"
            android:text="AIDL通信"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/ll_test_share_anim"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#dddddd"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_share_anim"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_scenery2"
                android:transitionName="pic" />

            <TextView
                android:id="@+id/tv_share_anim"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="share转场动画"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:transitionName="fab" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
