<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseThemeColor"
    android:orientation="vertical"
    tools:context=".module.loseweight.LoseWeightCalculatorActivity">

    <include layout="@layout/include_title_bar_one" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <!--年龄、静态心率-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年龄：" />


                <EditText
                    android:id="@+id/et_age"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="number" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="静态心率：" />


                <EditText
                    android:id="@+id/et_static_heart_rate"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>

            <!--性别、体重-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别：" />


                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:gravity="center"
                        android:id="@+id/tv_sex"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:text="男" />

                    <View
                        android:paddingLeft="5dp"
                        android:background="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="体重(kg)：" />


                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </LinearLayout>

            <!--身高-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身高(cm)：" />


                <EditText
                    android:id="@+id/et_height"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="number" />


            </LinearLayout>

            <!--最佳燃脂心率-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="1、最佳燃脂心率(填入年龄、静态心率)"
                android:textStyle="bold" />
            <!--生成最佳心率-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_get_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生成心率" />

                <TextView
                    android:id="@+id/tv_best_heart_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp" />
            </LinearLayout>


            <!--基础代谢卡路里-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="2、静态能量消耗值RMR(性别、年龄、体重、身高)"
                android:textStyle="bold" />

            <!--生成静态能量消耗值-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_get_rmr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生成rmr" />

                <TextView
                    android:id="@+id/tv_ree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp" />
            </LinearLayout>

            <!--基础代谢卡路里-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="3、基础代谢率BMR(性别、年龄、体重、身高)"
                android:textStyle="bold" />

            <!--生成基础代谢卡路里-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_get_bmr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生成bmr" />

                <TextView
                    android:id="@+id/tv_bmr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp" />
            </LinearLayout>

            <!---->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="4、每天所需的热量："
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="BMR/RMR x 活动因子指数 \n活动因子指数：卧床1.2、轻度活动量（多坐或缓步）1.3、中度活动量(一般活动)1.4、大活动量（重工作者） 2.0" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>